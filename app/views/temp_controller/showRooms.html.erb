<div id="roomsContainer">
  <div id="topContainer">
    <section id="room1" class="room">
      <h3>Living Room desired temp: <%= @room1Temp %></h3>
      <% if @room1Current != 'No measurement recorded' %>
        <h3>Current temp: <span id="room1Reading"><%= @room1Current.reading.to_f %></span></h3>      
        <h3>Updated at: <span id="room1ReadingTime"><%= @room1Current.updated_at.strftime('%H:%M %m/%d/%Y') %></span></h3>
      <% else %>
        <h3>Current temp: <span id="room1Reading">No measurment recorded</span></h3>
        <h3>Updated at: <span id="room1ReadingTime">No measurement recorded</span></h3>
      <% end %>
      <input id="room1Input">
      <button onclick="setTemp(1)">Set Temperature</button><br>
      <%= link_to "Display Living Room logs", roomLogs_path(room: 1) %>
    </section> <!-- End of room room1 -->

